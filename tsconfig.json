{
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"target": "ESNext",
		"verbatimModuleSyntax": true,
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"sourceMap": true,
		"rootDir": "./source",
		"outDir": "./distribution",
		"declaration": true,
		"lib": ["ES2023"]
	},
	"include": ["source/**/*"]
}
